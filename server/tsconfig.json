{
  "compilerOptions": {
    "composite": true,
    "typeRoots": ["./node_modules/@types"],
    "sourceMap": true,
    "rootDir": "../../",
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@server/*": ["./src/*"],
    }
  },
  "include": ["src/**/*", "../../packages/**/*"],
  "exclude": ["node_modules", "dist"]
}
